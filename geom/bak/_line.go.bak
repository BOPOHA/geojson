package geom

// Line ...
type Line interface {
	Points() []Point
	Scan(iter func(seg Segment) bool)
	Search(rect Rect, iter func(seg Segment, index int) bool)
	Rect() Rect
	IsClosed() bool
	Convex() bool

	ContainsPoint(point Point, allowOnEdge bool) bool
}

// NewLine ...
func NewLine(points []Point, indexed bool) Line {
	if indexed {
		return newTreeLine(points)
	}
	return newSimpleLine(points)
}
